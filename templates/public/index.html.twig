{% extends 'base_saasland.html.twig' %}

{% block title %}Hello PublicController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container mx-auto">
        <img class="mx-auto" src="{{ asset('img/logo.png') }}" alt="logo" />
    </div>

    <div class="container mx-auto px-4 sm:px-8 max-w-3xl">

        <div class="main-title my-8">
            <h1 class="font-bold text-2xl text-center">Commandez en ligne et retirez sur place</h1>
        </div>
    </div>

    <div class="container border flex flex-col md:flex-row flex-wrap mx-auto">
      <div class="w-full md:w-7/10 lg:w-7/10 flex flex-row flex-wrap items-center justify-center">
        {% include "variations/category/_categories_row.html.twig" %}
      </div>
      <div class="w-full md:w-full images grid grid-cols-1 sm:grid-cols-3 xs:gap-8 sm:gap-5">
        {# grid items #}
        {% include "variations/grid/_grid_items_label.html.twig" %}
      </div>
    </div>

    <div class="bg-gray-50">
      <div class="max-w-screen-xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8 lg:flex lg:items-center lg:justify-between">
        <h2 class="text-3xl leading-9 font-extrabold tracking-tight text-gray-900 sm:text-4xl sm:leading-10">
          Une envie spécifique ?
          <br />
          <span class="text-blue-600">C'est vous le chef !
          </span>
        </h2>
        <div class="mt-8 flex lg:flex-shrink-0 lg:mt-0">
          <div class="inline-flex rounded-md shadow">
            <a href="#" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base leading-6 font-medium rounded-md text-white bg-blue-600 hover:bg-indigo-500 focus:outline-none focus:shadow-outline transition duration-150 ease-in-out">
              Créer mon kebab
            </a>
          </div>
        </div>
      </div>
    </div>

